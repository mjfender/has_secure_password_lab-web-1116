<h1> New User Form </h1>
<% if flash[:notice] %>
  <h2> <%= flash[:notice] %> </h2>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.textfield :name %>

  <%= f.label :password %>
  <%= f.passwordfield :password %>

  <%= f.label :password_confirmation %>
  <%= f.passwordfield :password_confirmation %>

  <%= f.submit %>
<% end %>

